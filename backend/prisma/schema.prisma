generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(uuid())
  email              String    @unique
  username           String    @unique
  password           String?   // Optional - f√ºr Migration von bestehenden Nutzern
  isAdmin            Boolean   @default(false)
  isActive           Boolean   @default(true)
  inviteToken        String?   @unique
  inviteTokenExpiry  DateTime?
  magicLinkToken     String?   @unique
  magicLinkExpiry    DateTime?
  gamesAsWhite       Game[]    @relation("WhitePlayer")
  gamesAsBlack       Game[]    @relation("BlackPlayer")
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
}

model Setting {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Game {
  id             String   @id @default(uuid())
  gameType       String   @default("vs_stockfish") // vs_stockfish, vs_player
  whitePlayerId  String
  whitePlayer    User     @relation("WhitePlayer", fields: [whitePlayerId], references: [id], onDelete: Cascade)
  blackPlayerId  String?
  blackPlayer    User?    @relation("BlackPlayer", fields: [blackPlayerId], references: [id], onDelete: Cascade)
  pgn            String   @default("")
  fen            String   @default("rnbqkbnr/pppppppp/8/8/8/8/PPPPPPPP/RNBQKBNR w KQkq - 0 1")
  currentTurn    String   @default("w") // w or b
  status         String   @default("active") // active, checkmate, stalemate, draw, resigned, waiting
  moves          Move[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Move {
  id        String   @id @default(uuid())
  gameId    String
  game      Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  from      String
  to        String
  piece     String
  san       String   // Standard Algebraic Notation
  fen       String   // Board state after move
  moveNumber Int
  isPlayerMove Boolean @default(true)
  createdAt DateTime @default(now())
}
